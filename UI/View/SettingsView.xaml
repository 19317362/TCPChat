<Window x:Class="UI.View.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="MainWindow"
        Title="Настройки"
        MinHeight="400" 
        Height="400"
        MinWidth="500"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Icon="/TCPChat;component/Images/chat.ico">
    
    <Window.Resources>
        
        <DataTemplate x:Key="CommonTemplate">
            <Grid>
                
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="AudioTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0"
                       Grid.Row="0"
                       Padding="0"
                       Margin="10, 10, 10, 5"
                       Content="Микрофон"
                       VerticalAlignment="Center"/>
                
                <ComboBox Grid.Column="1"
                          Grid.Row="0"
                          Margin="10, 10, 10, 5"
                          SelectedItem="{Binding ElementName=MainWindow, 
                                                 Path=DataContext.SelectedTab.SelectedInput}"
                          SelectedIndex="{Binding ElementName=MainWindow,
                                                  Path=DataContext.SelectedTab.SelectdInputIndex,
                                                  Mode=TwoWay,
                                                  UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{Binding ElementName=MainWindow, 
                                                Path=DataContext.SelectedTab.InputDevices}"/>


                <Label Grid.Column="0"
                       Grid.Row="1"
                       Padding="0"
                       Margin="10, 5, 10, 5"
                       Content="Качество записи"
                       VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                          Grid.Row="1"
                          Margin="10, 5, 10, 5"
                          SelectedItem="{Binding ElementName=MainWindow, 
                                                 Path=DataContext.SelectedTab.SelectedConfig}"
                          SelectedIndex="{Binding ElementName=MainWindow,
                                                  Path=DataContext.SelectedTab.SelectdConfigIndex,
                                                  Mode=TwoWay,
                                                  UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{Binding ElementName=MainWindow,
                                                Path=DataContext.SelectedTab.InputConfigs}"/>

                <Label Grid.Column="0"
                       Grid.Row="2"
                       Padding="0"
                       Margin="10, 5, 10, 5"
                       Content="Динамики"
                       VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                          Grid.Row="2"
                          Margin="10, 5, 10, 10"
                          SelectedItem="{Binding ElementName=MainWindow, 
                                                 Path=DataContext.SelectedTab.SelectedOutput}"
                          SelectedIndex="{Binding ElementName=MainWindow,
                                                  Path=DataContext.SelectedTab.SelectdOutputIndex,
                                                  Mode=TwoWay,
                                                  UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{Binding ElementName=MainWindow, 
                                                Path=DataContext.SelectedTab.OutputDevices}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UserTemplate">
            <Grid>

            </Grid>
        </DataTemplate>
        
        <Style x:Key="TabControlStyle">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=SelectedTab.Name}"
                             Value="Основные">
                    <Setter Property="ContentControl.ContentTemplate" 
                            Value="{StaticResource ResourceKey=CommonTemplate}"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Path=SelectedTab.Name}"
                             Value="Звук">
                    <Setter Property="ContentControl.ContentTemplate" 
                            Value="{StaticResource ResourceKey=AudioTemplate}"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Path=SelectedTab.Name}"
                             Value="Пользовательские">
                    <Setter Property="ContentControl.ContentTemplate" 
                            Value="{StaticResource ResourceKey=UserTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
               
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Column="0"
                  Grid.Row="0"
                  Margin="10, 10, 5, 5"
                  SelectedValue="{Binding Path=SelectedTab, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Path=Tabs}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="130" Header="Элементы" DisplayMemberBinding="{Binding Path=Name}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <ContentControl Grid.Column="1"
                        Grid.Row="0"
                        Margin="5, 10, 10, 5"
                        Style="{StaticResource ResourceKey=TabControlStyle}"/>
        
        <Button Grid.Column="1"
                Grid.Row="1"
                Margin="5, 5, 10, 10"
                MinWidth="100"
                MinHeight="25"
                Content="Готово"
                HorizontalAlignment="Right"
                Command="{Binding Path=CloseSettingsCommand}"/>
    </Grid>
</Window>
